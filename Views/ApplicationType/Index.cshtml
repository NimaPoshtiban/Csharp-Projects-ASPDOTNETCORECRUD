@model IEnumerable<Rocky.Models.ApplicationType>
@{
    ViewData["Title"] = "Application Types";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary text-right text-white" asp-controller="ApplicationType" asp-action="Create">Create New Application Type</a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Application Type
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td>
                            <a class="btn btn-primary text-right text-whit mx-2" asp-route-Id="@item.Id" asp-controller="ApplicationType" asp-action="Edit">Edit</a>
                            <a class="btn btn-danger text-right text-white mx-2" asp-route-Id="@item.Id" asp-controller="ApplicationType" asp-action="Delete">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3 class="text-primary">Oops! No Application Type Exists.</h3>
    }
</div>

