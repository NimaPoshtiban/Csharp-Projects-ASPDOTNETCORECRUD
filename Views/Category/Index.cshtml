@model IEnumerable<Rocky.Models.Category>
@{
    ViewData["Title"] = "Catgories";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary text-right text-white" asp-controller="Category" asp-action="Create">Create New Category</a>
        </div>
    </div>
    <br/><br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td width="30%">@item.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a class="btn btn-primary text-right text-whit mx-2"  asp-route-Id="@item.Id" asp-controller="Category" asp-action="Edit">Edit</a>
                                <a class="btn btn-danger text-right text-white mx-2" asp-route-Id="@item.Id"  asp-controller="Category" asp-action="Delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
                <h3 class="text-primary">Oops! No Category Exists.</h3>
    }
</div>

